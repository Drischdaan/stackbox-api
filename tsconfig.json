{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@stackbox/common": ["libs/common/src"],
      "@stackbox/common/*": ["libs/common/src/*"],
      "@stackbox/database": ["libs/database/src"],
      "@stackbox/database/*": ["libs/database/src/*"],
      "@stackbox/workspaces": ["libs/workspaces/src"],
      "@stackbox/workspaces/*": ["libs/workspaces/src/*"],
      "@stackbox/products": ["libs/products/src"],
      "@stackbox/products/*": ["libs/products/src/*"]
    }
  }
}
